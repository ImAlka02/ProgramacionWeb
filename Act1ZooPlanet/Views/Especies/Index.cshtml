@model Act1ZooPlanet.Models.ViewModels.EspeciesViewModel
@{
    Layout = "Layout";
}

    <h1>
        <img src="~/clases/@(Model.IdClase).png" /> @Model.NombreClase
    </h1>
    
        <div class="listaEspecies2">
        @foreach (var e in Model.Especie)
        {
            <a href="~/Especies/Especie/@e.NombreEspecie">
                <img src="~/especies/@(e.IdEspecie).jpg" title="@e.NombreEspecie" />
            </a>
        }
        </div>
   

<script>
    var c = document.querySelector("main h1 img").cloneNode();
    document.querySelector("main h1").appendChild(c);
</script>